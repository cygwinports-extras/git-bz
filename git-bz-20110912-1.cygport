GIT_URI="git://git.fishsoup.net/git-bz"
inherit git

DESCRIPTION="Bugzilla subcommand for Git"
HOMEPAGE="http://blog.fishsoup.net/2008/11/16/git-bz-bugzilla-subcommand-for-git/"

DEPEND="asciidoc"

src_compile() {
	lndirs
	cd ${B}
	cygmake ${PN}.html ${PN}.1
}

src_install() {
	cd ${B}
	exeinto /usr/lib/git-core
	doexe git-bz

	doman *.1
	dodoc *.html
}
